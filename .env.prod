APP_NAME="Laravel API SOLID"
APP_ENV=production
APP_KEY=${APP_KEY}
APP_DEBUG=false
APP_URL=${APP_URL}

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Managed PostgreSQL Database (Production)
# These should be set via environment variables or secrets management
DB_CONNECTION=pgsql
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT:-5432}
DB_DATABASE=${DB_DATABASE}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_SSLMODE=${DB_SSLMODE:-require}

# Session and Cache
SESSION_DRIVER=${SESSION_DRIVER:-redis}
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=${SESSION_DOMAIN}
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=${QUEUE_CONNECTION:-redis}

CACHE_STORE=${CACHE_DRIVER:-redis}
CACHE_PREFIX=${CACHE_PREFIX}

# Managed Redis (Production)
REDIS_CLIENT=phpredis
REDIS_HOST=${REDIS_HOST}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_PORT=${REDIS_PORT:-6379}
REDIS_TLS=${REDIS_TLS:-true}

# Mail (Production SMTP)
MAIL_MAILER=${MAIL_MAILER:-smtp}
MAIL_HOST=${MAIL_HOST}
MAIL_PORT=${MAIL_PORT:-587}
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_ENCRYPTION=${MAIL_ENCRYPTION:-tls}
MAIL_FROM_ADDRESS=${MAIL_FROM_ADDRESS}
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 for file storage
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=${AWS_DEFAULT_REGION:-us-east-1}
AWS_BUCKET=${AWS_BUCKET}
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_URL=${AWS_URL}

# Vite
VITE_APP_NAME="${APP_NAME}"

# Laravel Passport
PASSPORT_PRIVATE_KEY=${PASSPORT_PRIVATE_KEY}
PASSPORT_PUBLIC_KEY=${PASSPORT_PUBLIC_KEY}
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=${PASSPORT_PERSONAL_ACCESS_CLIENT_ID}
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=${PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET}

# Security
SANCTUM_STATEFUL_DOMAINS=${SANCTUM_STATEFUL_DOMAINS}
SESSION_DOMAIN=${SESSION_DOMAIN}
CORS_ALLOWED_ORIGINS=${CORS_ALLOWED_ORIGINS}

# Monitoring and Logging
LOG_SLACK_WEBHOOK_URL=${LOG_SLACK_WEBHOOK_URL}
SENTRY_LARAVEL_DSN=${SENTRY_LARAVEL_DSN}

# Rate Limiting
THROTTLE_REQUESTS_PER_MINUTE=${THROTTLE_REQUESTS_PER_MINUTE:-60}
